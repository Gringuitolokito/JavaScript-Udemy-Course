const id = 100;

// equal to
if(id == 100){
    console.log('CORRECT');
} else {
    console.log('INCORRECT');
}

// not equal to
if(id != 101){
    console.log('CORRECT');
} else {
    console.log('INCORRECT');
}

// test type - check type
if(id === 100){
    console.log('CORRECT');
} else {
    console.log('INCORRECT');
}

