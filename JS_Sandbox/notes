const person = {
    firstName: 'Steve',
    lastName: 'Smith',
    age: 36,
    email: 'steve@aol.com',
    hobbies: ['music', 'sports'],
    address: {
        city: 'Maimi',
        state: 'FL'
    },
    getBirthYear: function(){
        return 1987 - this.age;
    }
    
}

let val;

val = person;

// Get specific value
val = person.firstName;
val = person['firstName'];
val = person.hobbies[1];
val = person.address.state;
val = person.getBirthYear();

console.log(val);

